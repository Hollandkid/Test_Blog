<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @*This Meta are used for Search Engines*@
    <meta name="description" content="@ViewBag.Description" />
    <meta name="keywords" content="@ViewBag.Keywords" />
    <link href="~/css/SiteSheet.css" rel="stylesheet" />

</head>
<body>
   
    <nav>
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>

        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AddPost">Add New Post</a>

        <a class="nav-link text-dark" asp-area="" asp-controller="AdminPanel" asp-action="Index">Admin Panel</a>


        @*Checks if the user is LoggedIn*@
        @if (User.Identity.IsAuthenticated)
        {
            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="LogOut">Logout</a>

        }
        else
        {
            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Login">Login</a>

        }

    </nav>
     <div class="main-img">
        <span class="title">Amazing Blog Site</span>
    </div>

    <div>
        @RenderBody()
    </div>
</body>

@RenderSection("scripts", false)
</html>
